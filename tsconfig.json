{
  "exclude": ["build/**/*"],
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "jsx": "react",
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "typeRoots": [
    "./node_modules/@types",
    "./types/**/*"
  ]
}
